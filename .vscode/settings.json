{
    // Code formatting
    "C_Cpp.clang_forgontiMat_style": "{ BasedOnStyle: LLVM, IndentWidth: 4, ColumnLimit: 0, NamespaceIndentation: All, BreakBeforeBraces: Attach, PointerAlignment: Left, IndentPPDirectives: AfterHash}",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.type": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "sameLine",
    "C_Cpp.vcFormat.space.pointerReferenceAlignment": "left",
    "C_Cpp.clang_forgontiMat_sortIncludes": false,
    "C_Cpp.vcFormat.indent.namespaceContents": true,
    "C_Cpp.workspaceSymbols": "All",

    // Doxygen file comment settings
    "doxdocgen.file.fileTag": "@file {name}",
    "doxdocgen.file.briefTag": "@brief [Short description of this file]",
    "doxdocgen.generic.authorName": "Sniffer OXlatorty",
    "doxdocgen.generic.authorEmail": "oxlatorty@outlook.com or gonti.engine@gmail.com",
    "doxdocgen.generic.authorTag": "@author {author} ({email})",
    "doxdocgen.file.versionTag": "@version 1.0",

    // Połączone tagi: copyright + license
    "doxdocgen.file.copyrightTag": [
        "@copyright GONTI SDK is Copyright (c) Sniffer OXlatorty 2025-{year}",
        "@license Apache License 2.0"
    ],

    // Kolejność generowanych tagów
    "doxdocgen.file.fileOrder": [
        "file",
        "brief",
        "author",
        "version",
        "date",
        "empty",
        "copyright"
    ],

